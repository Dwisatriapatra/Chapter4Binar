<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercise_challenge.RegisterFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/register_text"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/black"
        android:layout_below="@+id/register_text"
        android:id="@+id/exercise_view"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/exercise_login_photo_profile"
        android:layout_below="@id/exercise_view"
        android:layout_marginVertical="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan username"
        android:id="@+id/exercise_register_input_username"
        android:layout_below="@+id/exercise_login_photo_profile"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:background="@drawable/custom_layout_edit_text"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exercise_register_input_username"
        android:hint="Masukkan email"
        android:inputType="text"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:id="@+id/exercise_register_input_email"
        android:background="@drawable/custom_layout_edit_text"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exercise_register_input_email"
        android:hint="Masukkan password"
        android:inputType="text"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:id="@+id/exercise_register_input_password"
        android:background="@drawable/custom_layout_edit_text" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exercise_register_input_password"
        android:hint="Masukkan konfirmasi password"
        android:inputType="text"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:id="@+id/exercise_register_input_konfirmasi_password"
        android:background="@drawable/custom_layout_edit_text" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/exercise_button_register"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>
</RelativeLayout>